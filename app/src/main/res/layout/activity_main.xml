<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/one_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="5dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/two_one"
        app:layout_constraintEnd_toStartOf="@+id/one_two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1_name" />

    <Button
        android:id="@+id/two_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/three_one"
        app:layout_constraintEnd_toEndOf="@+id/one_one"
        app:layout_constraintStart_toStartOf="@+id/one_one"
        app:layout_constraintTop_toBottomOf="@+id/one_one" />

    <Button
        android:id="@+id/three_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/two_one"
        app:layout_constraintStart_toStartOf="@+id/two_one"
        app:layout_constraintTop_toBottomOf="@+id/two_one" />


    <Button
        android:id="@+id/one_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/two_two"
        app:layout_constraintEnd_toStartOf="@+id/one_three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one_one"
        app:layout_constraintTop_toTopOf="@+id/one_one" />

    <Button
        android:id="@+id/two_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/three_two"
        app:layout_constraintEnd_toEndOf="@+id/one_two"
        app:layout_constraintStart_toStartOf="@+id/one_two"
        app:layout_constraintTop_toBottomOf="@+id/one_two" />

    <Button
        android:id="@+id/three_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/two_two"
        app:layout_constraintStart_toStartOf="@+id/two_two"
        app:layout_constraintTop_toBottomOf="@+id/two_two" />

    <Button
        android:id="@+id/one_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:layout_marginRight="5dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toTopOf="@+id/two_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one_two"
        app:layout_constraintTop_toTopOf="@+id/one_two" />

    <Button
        android:id="@+id/two_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/three_three"
        app:layout_constraintEnd_toEndOf="@+id/one_three"
        app:layout_constraintStart_toStartOf="@+id/one_three"
        app:layout_constraintTop_toBottomOf="@+id/one_three" />

    <Button
        android:id="@+id/three_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/two_three"
        app:layout_constraintStart_toStartOf="@+id/two_three"
        app:layout_constraintTop_toBottomOf="@+id/two_three" />

    <EditText
        android:id="@+id/p2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:hint="P2 Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/p2"
        app:layout_constraintTop_toBottomOf="@+id/p2" />

    <EditText
        android:id="@+id/p1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="5"
        android:hint="P1 Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/p1"
        app:layout_constraintTop_toBottomOf="@+id/p1" />

    <TextView
        android:id="@+id/p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:text="Player Two: X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p1"
        app:layout_constraintTop_toTopOf="@+id/p1" />

    <TextView
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Player One: O"
        app:layout_constraintEnd_toStartOf="@+id/p2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>